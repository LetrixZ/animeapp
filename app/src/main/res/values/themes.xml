<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="chipBackground" format="color" />
    <attr name="progressBackground" format="color" />

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_500</item>
        <item name="colorPrimaryVariant">@color/dark_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>-->
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/dark_700</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_400</item>

        <item name="colorAccent">@color/red_500</item>

        <item name="editTextColor">#EAEAEB</item>
        <item name="chipBackground">#1A000000</item>
        <item name="progressBackground">#E1E1E1</item>
    </style>
</resources>